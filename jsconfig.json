{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@global": ["./src/components/global/*"],
            "@sections": ["src/components/sections/*"],
            "@pages": ["src/pages/*"],
            "@services": ["src/services/*"],
            "@utils": ["src/utils/*"],
            "@styles": ["src/styles/*"],
            "@assets": ["src/assets/*"],
            "@": ["src/*"]
        }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
